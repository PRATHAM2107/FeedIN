<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/PrimaryColor"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    tools:context=".Thanks_Message_Activity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="266dp"
        android:layout_height="128dp"
        android:contentDescription="@string/feedin_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/feedin_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Thanks for Donating Food ❤"
        android:textAlignment="center"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
        android:textSize="28sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Flames added to your wallet"
        android:drawableRight="@drawable/flames_icon"
        android:drawablePadding="8dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_sans"/>


    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/back_btn"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/primary_button"
        android:text="Back" />

</LinearLayout>

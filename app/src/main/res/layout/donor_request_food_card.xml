<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shape_round"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="20dp"
    app:cardMaxElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/food_card_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:background="@drawable/cornor_image_border"
            android:clipToOutline="true"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:srcCompat="@drawable/loading_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donor_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center_vertical"
                android:text="Request From"
                android:textColor="@color/FontSecondaryColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/requester_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center_vertical"
                android:text="pratham Momin"
                android:textColor="@color/FontColor"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:gravity="center_vertical"
                    android:text="Biryani"
                    android:textColor="@color/FontSecondaryColor"
                    android:textSize="20sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/request_from__tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center_vertical"
                android:text="Request on"
                android:textColor="@color/FontSecondaryColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/request_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center_vertical"
                android:text="13 Apr 2020 | 1.05 PM"
                android:textColor="@color/SecondaryColor"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/accept_request_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/accept_food_btn"
                android:elevation="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:gravity="center_horizontal|center_vertical|center"
                    android:text="Accept Request"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/request_icon" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>